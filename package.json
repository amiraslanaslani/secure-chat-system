{
  "name": "encrypted-chat-app",
  "version": "1.0.0",
  "description": "A secure encrypted chat application",
  "main": "project/statics/js/main.js",
  "type": "module",
  "scripts": {
    "build:css": "sass scss/chat/main.scss:project/statics/css/chat.css && sass scss/landing/main.scss:project/statics/css/landing.css",
    "build:js": "tsc",
    "build:css:watch": "sass --watch scss/chat/main.scss:project/statics/css/chat.css && sass --watch scss/landing/main.scss:project/statics/css/landing.css",
    "watch": "tsc --watch",
    "clean": "rm -rf project/statics/js",
    "test": "jest --detectOpenHandles --config ./tests/typescript/jest.config.cjs --roots ../../front"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.2",
    "sass": "^1.71.1",
    "serve": "^14.2.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "chat",
    "encryption",
    "typescript",
    "security"
  ],
  "author": "",
  "license": "MIT"
}

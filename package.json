{
  "name": "encrypted-chat-app",
  "version": "1.0.0",
  "description": "A secure encrypted chat application",
  "main": "project/statics/js/main.js",
  "type": "module",
  "scripts": {
    "build:css": "sass --no-source-map scss/chat/main.scss:project/statics/css/chat.css scss/landing/main.scss:project/statics/css/landing.css",
    "build:css:watch": "sass --no-source-map --watch scss/chat/main.scss:project/statics/css/chat.css scss/landing/main.scss:project/statics/css/landing.css",
    "watch": "tsc --watch",
    "clean": "rm -rf project/statics/js",
    "build:webpack": "webpack --config webpack.config.cjs"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "sass": "^1.71.1",
    "serve": "^14.2.1",
    "source-map-loader": "^5.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "keywords": [
    "chat",
    "encryption",
    "typescript",
    "security"
  ],
  "author": "",
  "license": "MIT"
}
